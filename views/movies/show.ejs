<%- include("../partials/header") %>

<div class="movie-details">

  <h1><%= movie.name %></h1>

  <p><strong>Year:</strong> <%= movie.year %></p>

  <p><strong>Genres:</strong>
    <%= movie.genres && movie.genres.length ? movie.genres.join(", ") : "No genres listed" %>
  </p>

  <p><strong>Rating:</strong> <%= movie.rating %></p>

  <p><strong>Description:</strong> <%= movie.description %></p>

  <p><strong>Added by:</strong> <%= movie.createdBy ? movie.createdBy.username : "Unknown" %></p>

  <% if (movie.posterUrl) { %>
    <div class="poster-wrapper">
      <img src="<%= movie.posterUrl %>" alt="Poster" class="movie-poster">
    </div>
  <% } %>

  <div class="movie-actions">

    <a href="/movies/<%= movie._id %>/edit" class="btn btn-secondary">Edit</a>

    <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-danger"
        onclick="return confirm('Are you sure you want to delete this movie?');">
        Delete
      </button>
    </form>

    <a href="/movies" class="btn btn-light">Back to list</a>

  </div>

</div>

<%- include("../partials/footer") %>


